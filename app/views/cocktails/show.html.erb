<h1><%= @cocktail.name %></h1>
<div class="card-lg">
  <div class="ingredients">
    <h3>Ingredients:</h3>
    <hr>
    <ul>
    <% @cocktail.doses.each do |dose| %>
      <li> <%=dose.ingredient.name %>: <%= dose.description %>   <%= link_to cocktail_dose_path(dose), method: :delete, data: { confirm: "Are you sure?"} do %><i class="far fa-trash-alt"></i> <% end %></li>
      <% end %>
    </ul>
  </div>
  <%= image_tag "logo.png", class: "image-lg-round" %>
</div>

<p> <%= link_to 'Add ingredient', new_cocktail_dose_path(@cocktail) %>  |  <%= link_to 'Back to all Cocktails', cocktails_path %> </p>

